<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.apptive.pictolearn">

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".EditActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".LearnActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LearnActivityAnswer"
            android:screenOrientation="portrait"/>
        <activity android:name=".ImgPopup"
            android:theme="@style/AppTheme.PopupTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".LearnPopup"
            android:theme="@style/AppTheme.PopupTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".ModePopup"
            android:theme="@style/AppTheme.PopupTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".ColorPopup"
            android:theme="@style/AppTheme.PopupTheme"
            android:screenOrientation="portrait"/>

    </application>

</manifest>